.navbar.navbar-inverse.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle{  type: :button, 'data-toggle' => :collapse,
                              'data-target' => '#navbar-collapse' }
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Radi&#937;'.html_safe,
                :root, :class => 'navbar-brand'
    #navbar-collapse.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li{ class: active_class?(songs_path) }
          = link_to 'Songs', songs_path
        %li{ class: active_class?(plays_path) }
          = link_to 'Plays', plays_path
        %li{ class: active_class?(setlists_path) }
          = link_to 'Setlists', setlists_path
        - if user_signed_in?
          %li{ class: active_class?(scratch_path) }
            = link_to 'Scratch', scratch_path
      %ul.nav.navbar-nav.pull-right
        %li
          - if user_signed_in?
            = link_to 'Logout', destroy_user_session_path, method: :delete
          - else
            = link_to 'Login', new_user_session_path
